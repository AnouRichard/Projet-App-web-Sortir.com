{% extends 'layout.html.twig' %}

{% block title %}Log in! {% endblock %}

{% block main %}


    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="row justify-content-center ">
    <form action="{{ path('login') }}" method="post">

        <div class="col-8">
            <div class="row mt-3">
                <label for="identifiant">Identifiant</label>
                <input type="text" id="identifiant" name="_username"/>
            </div>

            <div class="row mt-3">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password"/>
            </div>
            <div>
                <button class="btn btn-lg btn-secondary m-2"  type="submit">Connexion</button>
                <input type="hidden" name="_target_path" value="sortie_list"/>
            </div>
            <div>
                <label for="name">Se souvenir de moi </label>
                <input type="checkbox" name="_remember_me" checked/>
            </div>

            <div>
                <a href="{{ path('add_user')}}">Cr√©er un compte</a>
            </div>

        </div>
    </form>


{% endblock %}