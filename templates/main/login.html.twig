{% extends 'layout.html.twig' %}

{% block title %}Log in! {% endblock %}

{% block main %}


    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <div>
            <label for="identifiant">Identifiant:</label>
            <input type="text" id="identifiant" name="_username"/>
        </div>
        <div>
            <label for="password">Mot de passe:</label>
            <input type="password" id="password" name="_password"/>
        </div>
        <div>
            <button class="btn btn-lg btn-secondary m-2"  type="submit">Connexion</button>
            <input type="hidden" name="_target_path" value="accueil"/>
        </div>
        <div>
            <label for="name">Se souvenir de moi </label>
            <input type="checkbox" name="_remember_me" checked/>
        </div>
        <div>
            <a>Mot de passe oublié</a>
        </div>

        <div>
            <a href="{{ path('add_user')}}">Créer un compte</a>
        </div>
    </form>


{% endblock %}