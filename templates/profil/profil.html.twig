{% extends 'layout.html.twig' %}

{% block title %} Mon profil {% endblock %}



{% block main %}
    <div class="row justify-content-center">
        {% include ('inc/nav.html.twig') %}
    </div>

    <div class="row justify-content-center">
        <div class="col-12">
            <div class="row justify-content-center col-12">
                    <h1>{{partcicipant.pseudo}}</h1>
            </div>
            <div class="row mt-3">
                <div class="col-6">
                    {% if app.user.photo is not null %}
                    <img src="{{ asset('files/' ~ app.user.photo) }}" alt="{{ app.user.username }}">
                    {% endif %}
                </div>
                <div class="col-6">
                    <div class="row mt-3">
                        <div class="col-4"><h4>Prénom :</h4></div>
                        <div class="col-8">{{partcicipant.prenom}}</div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4"><h4>Nom :</h4></div>
                        <div class="col-8">{{partcicipant.nom}}</div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4"><h4>Téléphone:</h4></div>
                        <div class="col-8">{{partcicipant.telephone}}</div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4"><h4>Email :</h4></div>
                        <div class="col-8">{{partcicipant.mail}}</div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4"><h4>Campus : </h4></div>
                        <div class="col-8">{{partcicipant.campus.getNomCampus()}}</div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center mt-5">
                <div>
                    <button class="btn btn-lg btn-secondary m-2" type="button" >
                        <a href="{{ path('profilUpdate', {id:app.user.id}) }}" >Modifier</a>
                    </button>
                </div>
                <div>
                    <button class="btn btn-lg btn-secondary m-2"  type="reset">
                        <a href="{{ path('accueil') }}" >Annuler</a>
                    </button>
                </div>
            </div>
        </div>
    </div>



{% endblock %}