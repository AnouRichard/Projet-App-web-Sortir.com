{% extends 'layout.html.twig' %}

{% block title %} Mon profil {% endblock %}



{% block main %}
    <div class="row justify-content-center">
        {% include ('inc/nav.html.twig') %}
    </div>

    <div class="row justify-content-center">
        <div class="col-12">
            <div class="row justify-content-center col-12">
                    <h1>{{partcicipant.pseudo}}</h1>
            </div>
            <div class="row mt-3">
                <div class="col-6">
                    <h2>Photo profil</h2>
                </div>
                <div class="col-6">
                    <div class="row mt-3">
                        <div class="col-4"><h4>Prénom : {{partcicipant.prenom}}</h4></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4"><h4>Nom : {{partcicipant.nom}}</h4></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4"><h4>Téléphone: {{partcicipant.telephone}}</h4></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4"><h4>Email : {{partcicipant.mail}}</h4></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4"><h4>Campus: {{partcicipant.campus.getNomCampus()}}</h4></div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center mt-5">
                <div>
                    <button class="btn btn-lg btn-secondary m-2" type="button" >
                        <a href="{{ path('profil_update') }}" >Modifier</a>
                    </button>
                </div>
                <div>
                    <button class="btn btn-lg btn-secondary m-2"  type="reset">
                        <a href="{{ path('accueil') }}" >Annuler</a>
                    </button>
                </div>
            </div>
        </div>
    </div>



{% endblock %}