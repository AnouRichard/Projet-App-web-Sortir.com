{% extends 'layout.html.twig' %}

{% block title %} Modifier mon profil {% endblock %}



{% block main %}
<div class="row justify-content-center">
{% include ('inc/nav.html.twig') %}
</div>

<div class="row justify-content-center">
        <div class="col-12">
                <div class="row justify-content-center col-12">
                        <h2>Modifier mon Profil</h2>
                </div>
                <div class="row mt-3">
                        <div class="col-6">
                        </div>
                        <div class="col-6">
                                <div class="row mt-3">
                                        <div class="col-4"><h4>Pseudo :</h4></div>
                                        <div class="col-8">
                                                <input type="text" id="pseudo" class="form-control ">
                                        </div>
                                </div>
                                <div class="row mt-3">
                                        <div class="col-4"><h4>Prénom :</h4></div>
                                        <div class="col-8">
                                                <input type="text" id="prénom" class="form-control">
                                        </div>
                                </div>
                                <div class="row mt-3">
                                        <div class="col-4"><h4>Nom :</h4></div>
                                        <div class="col-8">
                                                <input type="text" id="campus" class="form-control ">
                                        </div>
                                </div>
                                <div class="row mt-3">
                                        <div class="col-4"><h4>Téléphone:</h4></div>
                                        <div class="col-8">
                                                <input type="text" id="téléphone" class="form-control ">
                                        </div>
                                </div>
                                <div class="row mt-3">
                                        <div class="col-4"><h4>Mot de passe:</h4></div>
                                        <div class="col-8">
                                                <input type="text" id="motdepasse" class="form-control ">
                                        </div>
                                </div>
                                <div class="row mt-3">
                                        <div class="col-4"><h4>Confirmation:</h4></div>
                                        <div class="col-8">
                                                <input type="text" id="confirmation" class="form-control ">
                                        </div>
                                </div>
                                <div class="row mt-3">
                                        <div class="col-4"><h4>Campus:</h4></div>
                                        <div class="col-8">
                                                <select id="campus" class="form-control">
                                                </select>
                                        </div>
                                </div>
                                <div class="row mt-3">
                                        <div class="col-4"><h4>Ma photo:</h4></div>
                                        <div class="col-8">
                                                <input type="text" id="photo" class="form-control ">
                                        </div>
                                </div>
                        </div>
                </div>
                <div class="row justify-content-center mt-5">
                        <div>
                                <button class="btn btn-lg btn-secondary m-2" type="button" >
                                        <a href="{{ path('profil_modif') }}" >Enregistrer</a>
                                </button>
                        </div>
                        <div>
                                <button class="btn btn-lg btn-secondary m-2"  type="reset">
                                        <a href="{{ path('profil') }}" >Annuler</a>
                                </button>
                        </div>
                </div>
        </div>
</div>



{% endblock %}