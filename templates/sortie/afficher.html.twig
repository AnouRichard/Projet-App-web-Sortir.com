{% extends 'layout.html.twig' %}

    {% block main %}

        <div class="row justify-content-center">
            <div class="col-12">
                <div class="row justify-content-center col-12">
                    <h2>Cr√©er une sortie</h2>
                </div>
                <div class="row mt-3">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-4"><h4><label>nom</label></h4></div>
                            <div class="col-8"><input type="text" value="{{ sorties.nom}}"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4><label>Date et heure de la sortie</label></h4></div>
                            <div class="col-8"><input type="text" value="{{ sorties.dateDeDebut|date}}"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4><label>Date limite d'inscription</label></h4></div>
                            <div class="col-8"><input type="text" value="{{ sorties.dateCloture|date}}"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4><label>Nombre de places</label></h4></div>
                            <div class="col-8"><input type="text" value="{{ sorties.nbInscriptionMax}}"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4><label>Duree</label></h4></div>
                            <div class="col-8"><input type="text" value="{{ sorties.duree}}"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4><label>Description et infos</label></h4></div>
                            <div class="col-8"><input type="textarea" value="{{ sorties.descriptionInfos}}"></div>
                        </div>
                    </div>
                    <div class="col-6">
                        {% set Leparticipant=""  %}
                        {% for sortie in sorties %}
                            {% if sortie.inscriptions is defined  %}
                                {% for inscription in sortie.inscriptions %}
                                    {% if inscription.Participant.id == sortie.organisateur  %}
                                        {% set Leparticipant=inscription.Participant  %}
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        {% endfor %}
                        {% dump(Leparticipant) %}
                        <div class="row mt-3">
                            <div class="col-4"><h4>Campus </h4></div>
                            <div class="col-8"></div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-4"><h4>Lieu </h4></div>
                            <div class="col-8">
                                <input type="text" value="{{ sorties.lieu.nom}}">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4>Rue</h4></div>
                            <div class="col-8"><input type="text" value="{{ sorties.lieu.rue}}"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4>Code Postal</h4></div>
                            <div class="col-8"><input type="text" value="{{ sorties.lieu.ville.codepostal }}"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4>Latitude</h4></div>
                            <div class="col-8"><input type="text" value="{{ sorties.lieu.latitude}}"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4>Longitude</h4></div>
                            <div class="col-8"><input type="text" value="{{ sorties.lieu.longitude}}"></div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        {{ form_end(sortieForm) }}



    {% endblock %}