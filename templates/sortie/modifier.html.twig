{% extends 'layout.html.twig' %}

    {% block main %}
        <form action="/projet-app-web-sortir.com/public/modifier" method="post" class="form-example">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="row justify-content-center col-12">
                    <h2>Cr√©er une sortie</h2>
                </div>
                <div class="row mt-3">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-4"><h4><label>nom</label></h4></div>
                            <div class="col-8"><input type="text" class="form-control form-control-lg" disabled="disabled" value="{{ sorties.nom}}"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4><label>Date et heure de la sortie</label></h4></div>
                            <div class="col-8"><input type="text" class="form-control form-control-lg" disabled="disabled" value="{{ sorties.dateDeDebut|date}}"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4><label>Date limite d'inscription</label></h4></div>
                            <div class="col-8"><input type="text" class="form-control form-control-lg" disabled="disabled" value="{{ sorties.dateCloture|date}}"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4><label>Nombre de places</label></h4></div>
                            <div class="col-8"><input type="text" class="form-control form-control-lg" disabled="disabled" value="{{ sorties.nbInscriptionMax}}"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4><label>Duree</label></h4></div>
                            <div class="col-8"><input type="text" class="form-control form-control-lg" disabled="disabled" value="{{ sorties.duree}}"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4><label>Description et infos</label></h4></div>
                            <div class="col-8"><input type="textarea" class="form-control form-control-lg" disabled="disabled" value="{{ sorties.descriptionInfos}}"></div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row mt-3">
                            <div class="col-4"><h4>Campus </h4></div>
                            <div class="col-8">
                                <input type="text " disabled="disabled" class="form-control form-control-lg" value="{{ organisateur.campus.nomcampus}}">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4>Ville</h4></div>
                            <div class="col-8">
                                <select name="ville" class="form-control" id="ville">
                                    <option value=""></option>

                                </select>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4>Lieu </h4></div>
                            <div class="col-8">
                                <input type="text" disabled="disabled" class="form-control form-control-lg" value="{{ sorties.lieu.nom}}">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4>Rue</h4></div>
                            <div class="col-8"><input type="text" class="form-control form-control-lg" disabled="disabled" value="{{ sorties.lieu.rue}}"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4>Code Postal</h4></div>
                            <div class="col-8"><input type="text" class="form-control form-control-lg"  disabled="disabled" value="{{ sorties.lieu.ville.codepostal }}"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4>Latitude</h4></div>
                            <div class="col-8"><input type="text" class="form-control form-control-lg" disabled="disabled"  value="{{ sorties.lieu.latitude}}"></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4"><h4>Longitude</h4></div>
                            <div class="col-8"><input type="text" class="form-control form-control-lg" disabled="disabled" value="{{ sorties.lieu.longitude}}"></div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center mt-5">
                    <button class="btn btn-lg btn-secondary m-2" type="submit">Enregistrer</button>

                    <button class="btn btn-lg btn-secondary m-2" type="button">supprimer</button>
                </div>
            </div>
        </div>
        </form>



    {% endblock %}